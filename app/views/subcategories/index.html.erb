<p id="notice"><%= notice %></p>

<h1>Subcategories</h1>

<table>
  <thead>
    <tr>
      <th>Subcategory</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subcategories.each do |subcategory| %>
      <tr>
        <td><%= subcategory.subcategory %></td>
        <td><%= subcategory.category[:category] %></td>
        <td><%= link_to 'Show', subcategory %></td>
        <% if current_user.is_admin %>
          <td><%= link_to 'Edit', edit_subcategory_path(subcategory) %></td>
          <td><%= link_to 'Destroy', subcategory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if current_user.is_admin %>
  <%= link_to 'New Subcategory', new_subcategory_path %><br><br>
<% end %>
